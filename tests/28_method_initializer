class Scone {
    init() { 
        print "hello world!";
        return this;
    }

    topping(first, second)
    {
        print "scone with " + first + " and " + second + " with " + this.compliment;
    }
}

var scone = Scone();
scone.compliment = "chocolate";
print scone.compliment;
scone.topping("berries", "cream");

