// --------------------------------------------------------
// Expected output:
// return from outer
// create inner closure
// value

fun outer() {
  var x = "value";
  fun middle() {
    fun inner() {
      print x;
    }

    print "create inner closure";
    return inner;
  }

  print "return from outer";
  return middle;
}

var mid = outer();
var in = mid();
in ();

// --------------------------------------------------------
// Expected output:
// 0004    9 OP_CLOSURE          2 <fn inner>
// 0006      |                     upvalue 0
// 0008      |                     local 1
// 0010      |                     upvalue 1
// 0012      |                     local 2

// fun outer() {
